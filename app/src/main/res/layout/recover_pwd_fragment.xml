<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BlankFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/input_padding_left"
        android:paddingTop="@dimen/input_padding_top"
        android:paddingRight="@dimen/input_padding_right"
        android:paddingBottom="@dimen/input_padding_bottom">

        <TextView
            android:id="@+id/recoverTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top"
            android:fontFamily="@font/abeezee"
            android:paddingLeft="@dimen/input_padding_left"
            android:paddingTop="@dimen/input_padding_top"
            android:paddingRight="@dimen/input_padding_right"
            android:paddingBottom="@dimen/input_login_margin_inter"
            android:text="@string/recover_pwd"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/emailRecoverInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_padding_top"
            android:layout_marginBottom="@dimen/input_padding_bottom"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/input_padding_left"
            android:paddingTop="@dimen/input_login_margin_inter"
            android:paddingRight="@dimen/input_padding_right"
            android:paddingBottom="@dimen/input_padding_bottom" />

        <Button
            android:id="@+id/recoverPwdBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send email"
            app:cornerRadius="@dimen/btn_corner_radius" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/goToLoginBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/go_back_btn_margin_start"
            android:layout_marginBottom="@dimen/go_back_btn_margin_bottom"
            android:background="@drawable/ic_enter"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
    </RelativeLayout>

</FrameLayout>