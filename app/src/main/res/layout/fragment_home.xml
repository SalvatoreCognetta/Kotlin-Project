<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">


    <ScrollView
        android:id="@+id/homeScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <RelativeLayout
            android:id="@+id/relativeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/fragment_padding_start"
            android:paddingTop="@dimen/fragment_padding_top"
            android:paddingEnd="@dimen/fragment_padding_end">

            <TextView
                android:id="@+id/titleHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="@string/title_home"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/refreshCovidInfoBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/titleHome"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/titleHome"
                android:background="@drawable/ic_enter"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vaccinationInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleHome"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/secondaryColor"
                app:strokeWidth="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/vaccinationInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/abeezee" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/covidInfoAbruzzoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccinationInfoCard"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/secondaryColor"
                app:strokeWidth="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/covidInfoAbruzzoText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/abeezee" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/navigateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/covidInfoAbruzzoCard"
                android:layout_alignParentBottom="false"
                android:text="navigate" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>